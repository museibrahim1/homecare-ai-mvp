# =============================================================================
# Homecare AI MVP - Environment Variables
# =============================================================================
# Copy this file to .env and customize values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+psycopg://homecare:homecare@localhost:5432/homecare

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# S3/MinIO Object Storage
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio12345
S3_BUCKET=homecare-audio

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a secure random string in production
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-to-a-secure-random-string
JWT_ISSUER=homecare-ai
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# ASR (Automatic Speech Recognition) Configuration
# -----------------------------------------------------------------------------
# Model sizes: tiny, base, small, medium, large-v2, large-v3
# Larger models are more accurate but require more memory/compute
ASR_MODEL_SIZE=medium

# Set to true if running on a machine with NVIDIA GPU
USE_GPU=false

# -----------------------------------------------------------------------------
# Hugging Face (Required for Speaker Diarization)
# -----------------------------------------------------------------------------
# Get your token from: https://huggingface.co/settings/tokens
# Required for pyannote.audio diarization models
# You must also accept the model license agreements at:
# - https://huggingface.co/pyannote/speaker-diarization-3.1
# - https://huggingface.co/pyannote/segmentation-3.0
HF_TOKEN=your-huggingface-token-here

# -----------------------------------------------------------------------------
# LLM Configuration - For Contract & Note Generation
# -----------------------------------------------------------------------------
# Choose ONE provider: OpenAI OR Anthropic (Claude)
# The model name determines which provider is used

# OpenAI API Key (for GPT models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (for Claude models)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model to use - provider is auto-detected from model name:
#
# OpenAI models:
# - gpt-4o-mini: Fast and cheap (~$0.15/1M tokens)
# - gpt-4o: Most capable (~$5/1M tokens)
# - gpt-4-turbo: Good balance (~$10/1M tokens)
#
# Anthropic (Claude) models:
# - claude-sonnet-4-20250514: Best balance of speed/quality (recommended)
# - claude-3-5-sonnet-20241022: Previous generation, still excellent
# - claude-3-opus-20240229: Most capable Claude
# - claude-3-haiku-20240307: Fastest and cheapest Claude
#
LLM_MODEL=claude-sonnet-4-20250514

# Temperature (0.0-1.0): Lower = more focused, Higher = more creative
LLM_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
