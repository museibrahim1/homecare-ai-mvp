# =============================================================================
# PalmCare AI MVP - Environment Variables
# =============================================================================
# Copy this file to .env and customize values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=palmcare
POSTGRES_USER=palmcare
POSTGRES_PASSWORD=palmcare
DATABASE_URL=postgresql+psycopg://palmcare:palmcare@localhost:5432/palmcare

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# S3/MinIO Object Storage
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio12345
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio12345
S3_BUCKET=palmcare-audio

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# IMPORTANT: Change this to a secure random string in production
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-to-a-secure-random-string
JWT_ISSUER=palmcare-ai
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# -----------------------------------------------------------------------------
# ASR (Automatic Speech Recognition) Configuration
# -----------------------------------------------------------------------------
# Model sizes: tiny, base, small, medium, large-v2, large-v3
# Larger models are more accurate but require more memory/compute
ASR_MODEL_SIZE=medium

# Set to true if running on a machine with NVIDIA GPU
USE_GPU=false

# -----------------------------------------------------------------------------
# Speaker Diarization - Choose ONE method
# -----------------------------------------------------------------------------

# OPTION 1: pyannote.ai API (Recommended - easier, no GPU needed)
# Get your API key from: https://www.pyannote.ai/
# Sign up and get your key from the dashboard
PYANNOTE_API_KEY=

# OPTION 2: Hugging Face (Local models - requires GPU for good performance)
# Get your token from: https://huggingface.co/settings/tokens
# You must also accept the model license agreements at:
# - https://huggingface.co/pyannote/speaker-diarization-3.1
# - https://huggingface.co/pyannote/segmentation-3.0
HF_TOKEN=

# -----------------------------------------------------------------------------
# LLM Configuration - For Contract & Note Generation
# -----------------------------------------------------------------------------
# Choose ONE provider: OpenAI OR Anthropic (Claude)
# The model name determines which provider is used

# OpenAI API Key (for GPT models)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (for Claude models)
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model to use - provider is auto-detected from model name:
#
# OpenAI models:
# - gpt-4o-mini: Fast and cheap (~$0.15/1M tokens)
# - gpt-4o: Most capable (~$5/1M tokens)
# - gpt-4-turbo: Good balance (~$10/1M tokens)
#
# Anthropic (Claude) models:
# - claude-sonnet-4-20250514: Best balance of speed/quality (recommended)
# - claude-3-5-sonnet-20241022: Previous generation, still excellent
# - claude-3-opus-20240229: Most capable Claude
# - claude-3-haiku-20240307: Fastest and cheapest Claude
#
LLM_MODEL=claude-sonnet-4-20250514

# Temperature (0.0-1.0): Lower = more focused, Higher = more creative
LLM_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=INFO
APP_URL=https://palmtai.com

# Auto-approve new business registrations (set to false for production verification)
AUTO_APPROVE_BUSINESSES=true

# Admin password (change in production!)
ADMIN_PASSWORD=change-me-in-production

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Stripe Billing Configuration
# -----------------------------------------------------------------------------
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_...) for development
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Webhook secret for verifying webhook events
# Get this from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redirect URLs after checkout
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/pricing

# -----------------------------------------------------------------------------
# Email Configuration (Resend)
# -----------------------------------------------------------------------------
# Get your API key from: https://resend.com/api-keys
# Verify your domain at: https://resend.com/domains
RESEND_API_KEY=re_your-resend-api-key

# Dedicated sender addresses (each must be verified in Resend)
EMAIL_FROM_ONBOARDING=PalmCare AI <onboarding@palmtai.com>
EMAIL_FROM_WELCOME=PalmCare AI <welcome@palmtai.com>
EMAIL_FROM_SALES=PalmCare AI <sales@palmtai.com>
EMAIL_FROM_SUPPORT=PalmCare AI <support@palmtai.com>

# Legacy fallback (used when no specific sender is set)
EMAIL_FROM=PalmCare AI <onboarding@palmtai.com>
SUPPORT_EMAIL=support@palmtai.com

# Admin notification email - receives alerts for new signups
ADMIN_NOTIFICATION_EMAIL=admin@palmtai.com

# -----------------------------------------------------------------------------
# Google Calendar Integration
# -----------------------------------------------------------------------------
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
# 1. Create a new project or select existing
# 2. Enable Google Calendar API
# 3. Create OAuth 2.0 Client ID (Web application)
# 4. Add authorized redirect URI: https://your-domain.com/api/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# -----------------------------------------------------------------------------
# Formspree Configuration (Contact & Support Forms)
# -----------------------------------------------------------------------------
# Sign up at: https://formspree.io
# 1. Create a new form for contact inquiries
# 2. Create another form for support tickets
# 3. Copy the form IDs (the part after /f/ in your form URL)
NEXT_PUBLIC_FORMSPREE_CONTACT_ID=your-contact-form-id
NEXT_PUBLIC_FORMSPREE_SUPPORT_ID=your-support-form-id
